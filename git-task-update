#!/bin/bash

set -e
source "${0%[\\/]*}"/_git-common.sh

echo "Under construction! Momenteel handmatig de source branch mergen"
exit 1

task=$1
if [ "" == "$1" ]; then
	task=$(git rev-parse --abbrev-ref HEAD)

	if [ "master" == $task ]; then
		echo "Specify a task name to update"
		exit 1
	fi
fi

git task-sync

if [[ $task == task-* ]]; then
	task=${task:5}
fi

remote=$(git config "branch.master.remote")
git checkout task-$task
git merge $remote/master
